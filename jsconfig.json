{
  "compilerOptions": {
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "types": ["/apps/openx-a/components.d.ts"]
    // "paths": {
    //   "@/*": ["./src/*"]
    // }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "*.js",
    "*.jsx",
    "*.vue",
  ],
}